#!/usr/bin/env bash
# Find the PID of the '7-highlander' process
pid=$(pgrep -f 7-highlander)

# If the process exists, send a STOP signal
if [ -n "$pid" ]; then
    echo "Terminating process with PID: $pid"
    # Use `kill -STOP` to send a STOP signal (as a workaround)
    kill -STOP "$pid"
else
    echo "Process not found!"
fi
